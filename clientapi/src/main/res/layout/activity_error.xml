<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_yellow"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".activities.errors.ErrorActivity">

    <TextView
        android:id="@+id/textView_error_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:text="@string/configuration_error_title"
        android:textAllCaps="true"
        android:textColor="@color/simprints_white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/alert_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0.55"
        android:contentDescription="@string/main_error_graphic"
        android:src="@drawable/clientapi_error_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView_error_hint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="@string/hint_graphic"
            android:src="@drawable/clientapi_error_hint_cog"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/textView_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:text="@string/failed_to_retrieve_message"
            android:textColor="@color/simprints_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/simprints_light_grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_close_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/alert_yellow"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/simprints_white"
            android:textSize="24sp"
            tools:ignore="NestedWeights" />

    </LinearLayout>

</LinearLayout>
