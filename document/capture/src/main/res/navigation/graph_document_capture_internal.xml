<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_document_capture_internal"
    app:startDestination="@id/documentPreparationFragment">

    <fragment
        android:id="@+id/documentPreparationFragment"
        android:name="com.simprints.document.capture.screens.preparation.PreparationFragment"
        android:label="fragment_preparation"
        tools:layout="@layout/fragment_preparation">
        <action
            android:id="@+id/action_documentPreparationFragment_to_documentLiveFeedbackFragment"
            app:destination="@id/documentLiveFeedbackFragment"
            app:popUpTo="@+id/graph_document_capture_internal"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/documentLiveFeedbackFragment"
        android:name="com.simprints.document.capture.screens.livefeedback.LiveFeedbackFragment"
        android:label="DocumentDetectionFragment"
        tools:layout="@layout/fragment_live_feedback">
        <action
            android:id="@+id/action_documentLiveFeedbackFragment_to_documentConfirmationFragment"
            app:destination="@id/documentConfirmationFragment"
            app:popUpTo="@+id/graph_document_capture_internal"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/documentConfirmationFragment"
        android:name="com.simprints.document.capture.screens.confirmation.ConfirmationFragment"
        android:label="ConfirmationFragment"
        tools:layout="@layout/fragment_confirmation">
        <action
            android:id="@+id/action_documentConfirmationFragment_to_documentLiveFeedbackFragment"
            app:destination="@id/documentLiveFeedbackFragment"
            app:popUpTo="@+id/graph_document_capture_internal"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/action_global_documentLiveFeedback"
        app:destination="@+id/documentLiveFeedbackFragment"
        app:popUpTo="@+id/graph_document_capture_internal"
        app:popUpToInclusive="true" />

</navigation>
