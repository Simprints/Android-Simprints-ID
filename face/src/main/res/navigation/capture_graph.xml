<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/capture_graph"
    app:startDestination="@id/preparationFragment">

    <fragment
        android:id="@+id/preparationFragment"
        android:name="com.simprints.face.capture.livefeedback.PreparationFragment"
        android:label="fragment_preparation"
        tools:layout="@layout/fragment_preparation">
        <action
            android:id="@+id/action_preparationFragment_to_liveFeedbackFragment"
            app:destination="@id/liveFeedbackFragment"
            app:popUpTo="@+id/capture_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/liveFeedbackFragment"
        android:name="com.simprints.face.capture.livefeedback.LiveFeedbackFragment"
        android:label="FaceDetectionFragment"
        tools:layout="@layout/fragment_live_feedback">
        <action
            android:id="@+id/action_liveFeedbackFragment_to_confirmationFragment"
            app:destination="@id/confirmationFragment"
            app:popUpTo="@+id/capture_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/confirmationFragment"
        android:name="com.simprints.face.capture.confirmation.ConfirmationFragment"
        android:label="ConfirmationFragment"
        tools:layout="@layout/fragment_confirmation" >
        <action
            android:id="@+id/action_confirmationFragment_to_liveFeedbackFragment"
            app:destination="@id/liveFeedbackFragment"
            app:popUpTo="@+id/capture_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/refusalFragment"
        android:name="com.simprints.face.exitform.ExitFormFragment"
        android:label="refusal_fragment"
        tools:layout="@layout/fragment_exit_form" >
        <action
            android:id="@+id/action_refusalFragment_to_liveFeedbackFragment"
            app:destination="@+id/liveFeedbackFragment"
            app:popUpTo="@+id/capture_graph"
            app:popUpToInclusive="true"/>

    </fragment>
    <action
        android:id="@+id/action_global_refusalFragment"
        app:destination="@+id/refusalFragment"
        app:popUpTo="@+id/capture_graph"
        app:popUpToInclusive="true"/>
</navigation>
