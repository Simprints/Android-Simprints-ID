<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dashboard_project_details_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboard_project_details_card_title"
            style="@style/Text.Subtitle1.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_dashboard_card_space_below_title"
            tools:text="Cohesu Project" />

        <TextView
            android:id="@+id/dashboard_project_details_card_current_user"
            style="@style/Text.Body2.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Current User: Some User" />

        <TextView
            android:id="@+id/dashboard_project_details_card_scanner_used"
            style="@style/Text.Body2.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            tools:text="Scanner Used: SP1234" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
