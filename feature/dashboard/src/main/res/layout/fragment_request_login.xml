<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_request_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/loginImageViewLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/simprints_logo" />


        <TextView
            android:id="@+id/libSimprintsVersionTextView"
            style="@style/Text.Body1.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:text="@string/libsimprints_label"
            android:textColor="@color/simprints_white" />

        <TextView
            android:id="@+id/simprintsIdVersionTextView"
            style="@style/Text.Body1.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="Simprints ID: 0.0.0-dev+1" />

        <TextView
            android:id="@+id/requestLogin"
            style="@style/Text.Headline5.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/requestLogin_message"
            android:textColor="@color/simprints_white" />

        <TextView
            android:id="@+id/tv_device_id"
            style="@style/Text.Headline6.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textIsSelectable="true"
            tools:text="DeviceID: some device id" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
