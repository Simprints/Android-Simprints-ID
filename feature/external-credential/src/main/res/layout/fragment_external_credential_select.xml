<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue">

    <TextView
        android:id="@+id/externalCredentialTitle"
        style="@style/Text.Headline5.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_huge"
        android:text="@string/external_credential_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_option_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/skipExternalCredentialScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/externalCredentialTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/topTitleGrid"
            style="@style/Text.Headline4.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Freestyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanQrCard_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/ic_qr_scanner"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/scanQrText_grid"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/login_scan_qr_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="@dimen/margin_large"
                android:layout_height="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanOcrAny_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/ic_document_scanner"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/anyDoc_grid"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Any document"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_large" />

        <View
            android:id="@+id/dividerGrid"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/simprints_grey_light" />

        <TextView
            android:id="@+id/bottomTitleGrid"
            style="@style/Text.Headline4.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predefined" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanOcrGhanaIdCard_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/ic_id_card"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/ghanaIdText_grid"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="🇬🇭 ID Card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="@dimen/margin_large"
                android:layout_height="0dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanOcrGhanaNHISCard_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/ic_id_card"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/nhisCardText_grid"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="🏥 NHIS Card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dobCard_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="92dp"
                        android:layout_height="92dp"
                        android:src="@drawable/ic_calendar_month"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/dobText_grid"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Date of birth"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_large" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_option_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/skipExternalCredentialScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/externalCredentialTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/topTitle"
            style="@style/Text.Headline4.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Freestyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanQrCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_qr_scanner"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/scanQrText"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/login_scan_qr_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="@dimen/margin_large"
                android:layout_height="@dimen/margin_large" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scanOcrAny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/margin_large"
                    android:paddingVertical="@dimen/margin_default"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_document_scanner"
                        app:tint="@color/simprints_text_black" />

                    <Space
                        android:layout_width="@dimen/margin_large"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/anyDoc"
                        style="@style/Text.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Any document"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_large" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/simprints_grey_light" />

        <TextView
            android:id="@+id/bottomTitle"
            style="@style/Text.Headline4.White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Predefined" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scanOcrGhanaIdCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/externalCredentialTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_large"
                android:paddingVertical="@dimen/margin_default"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/simprints_text_black" />

                <Space
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/ghanaIdText"
                    style="@style/Text.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🇬🇭 Ghana ID Card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_large" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scanOcrGhanaNHISCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/externalCredentialTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_large"
                android:paddingVertical="@dimen/margin_default"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_id_card"
                    app:tint="@color/simprints_text_black" />

                <Space
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/nhisCardText"
                    style="@style/Text.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🏥 Ghana NHIS Card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_large" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dobCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/externalCredentialTitle"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_large"
                android:paddingVertical="@dimen/margin_default"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar_month"
                    app:tint="@color/simprints_text_black" />

                <Space
                    android:layout_width="@dimen/margin_large"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/dobCardText"
                    style="@style/Text.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Date of birth"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/skipExternalCredentialScan"
        style="@style/Text.Body1.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_huge"
        android:text="Skip external credentail scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
