<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_bg"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconHeader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_error_outline_24px" />

        <View
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/confirmActionTitle"
            style="@style/Text.Headline5.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/fingerprint_capture_confirm_action_restart_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/margin_default"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/confirmActionBody"
        style="@style/Text.Subtitle1.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_default"
        tools:text="@string/fingerprint_capture_confirm_action_restart_body" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNotDesirableAction"
        style="@style/Widget.Simprints.Button.Grey.RedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="RESTART" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancel"
        style="@style/Widget.Simprints.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_capture_cancel_button" />
</LinearLayout>
