<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconHeader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:importantForAccessibility="no"
            tools:src="@drawable/ic_check_circle_outline_24px" />

        <View
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="0dp" />

        <TextView
            style="@style/Text.Headline5.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fingerprint_capture_confirm_fingers_dialog_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/margin_default"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/scanResultMessage"
        style="@style/Text.Subtitle1.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_default"
        android:visibility="gone"
        tools:text="Only 2 good fingers scanned.\nRequired: 4"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fingerprintList"
        style="@style/Text.Body1.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="✓ Left Thumb\n✓ Right Thumb\n× Left Index Finger\n× Right Fifth Finger" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNotDesirableAction"
        style="@style/Widget.Simprints.Button.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="RESTART/CONTINUE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonContinue"
        style="@style/Widget.Simprints.Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_capture_confirm_fingers_dialog_yes"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRestart"
        style="@style/Widget.Simprints.Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fingerprint_capture_confirm_fingers_dialog_no"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>
