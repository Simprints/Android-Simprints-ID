<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.simprints.fingerprint.activities.matching.MatchingActivity">

    <TextView
        android:id="@+id/matching_please_wait"
        style="@style/Text.Subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pb_identification"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:text="@string/please_wait" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb_identification"
        style="@style/Widget.Simprints.LinearProgressIndicator.Blue.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        tools:progress="42" />

    <TextView
        android:id="@+id/tv_matchingProgressStatus1"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_identification"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        tools:text="@plurals/loaded_candidates_result" />

    <TextView
        android:id="@+id/tv_matchingProgressStatus2"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matchingProgressStatus1"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        tools:text="@plurals/returned_results"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_matchingResultStatus1"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matchingProgressStatus2"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:text="@plurals/tier1or2_matches"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_matchingResultStatus2"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matchingResultStatus1"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:text="@plurals/tier3_matches"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_matchingResultStatus3"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_matchingResultStatus2"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:text="@plurals/tier4_matches"
        tools:visibility="visible" />

</RelativeLayout>
