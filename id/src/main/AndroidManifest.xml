<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simprints.id">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Features -->
    <uses-feature android:name="android.hardware.location.gps" />

    <!-- CommCare Permission -->
    <uses-permission android:name="org.commcare.dalvik.provider.cases.read" />

    <application
        android:name=".Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.launch.LaunchActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.simprints.id.activities.checkLogin.openedByMainLauncher.CheckLoginFromMainLauncherActivity"
            android:label="@string/title_activity_front"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.simprints.id.activities.checkLogin.openedByIntent.CheckLoginFromIntentActivity"
            android:label="@string/title_activity_front"
            android:launchMode="standard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.simprints.id.REGISTER" />
                <action android:name="com.simprints.id.IDENTIFY" />
                <action android:name="com.simprints.id.UPDATE" />
                <action android:name="com.simprints.id.VERIFY" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.simprints.id.REGISTER" />
                <action android:name="com.simprints.id.IDENTIFY" />
                <action android:name="com.simprints.id.UPDATE" />
                <action android:name="com.simprints.id.VERIFY" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data android:mimeType="*/*" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activities.AlertActivity"
            android:label="@string/alert_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.main.MainActivity"
            android:label="Main"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.matching.MatchingActivity"
            android:label="Matching"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/help_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ActionBar" />

        <activity
            android:name=".activities.login.LoginActivity"
            android:label="@string/login_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.requestLogin.RequestLoginActivity"
            android:label="@string/requestLogin_title"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.TutorialActivity"
            android:label="@string/tutorial_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.about.AboutActivity"
            android:label="@string/about_title"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PrivacyActivity"
            android:label="@string/privacy_label"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RefusalActivity"
            android:label="@string/refusal_label"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.dashboard.DashboardActivity"
            android:label="@string/dashboard_label"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <service
            android:name="com.simprints.id.services.GuidSelectionService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.simprints.id.CONFIRM_IDENTITY" />
            </intent-filter>
        </service>

        <service
            android:name=".services.sync.SyncService"
            android:exported="false" />


        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activities.main.MainActivity" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="897ed2ef7a2d43e09bcd42998f2533acbb9657e7" />
        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="false" />
    </application>

</manifest>
