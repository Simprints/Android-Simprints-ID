<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DashboardCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/DashboardCardStyleRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dashboard_sync_card_title"
            style="@style/DashboardCardStyleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_card_sync_title" />

        <LinearLayout
            android:id="@+id/dashboard_sync_card_select_modules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_dashboard_card_sync_space_above_last_sync"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dashboard_sync_card_select_modules_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="Please select modules to sync "
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dashboard_sync_card_select_modules_button"
                style="@style/SimprintsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_rounded_corners_gray"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="MODULES"
                android:translationZ="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dashboard_sync_card_last_sync"
            style="@style/DashboardCardStyleLastSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last sync: 1 day ago" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
