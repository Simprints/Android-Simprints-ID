<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/DashboardCardStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/DashboardCardStyleRoot">

        <TextView
            android:id="@+id/dashboard_sync_card_title_modules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_card_sync_title"
            android:theme="@style/DashboardCardStyleTitle" />

        <LinearLayout
            android:id="@+id/dashboard_sync_card_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dashboard_sync_card_progress_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting ... " />

            <ProgressBar
                android:id="@+id/dashboard_sync_card_indeterminate_progress"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@android:color/darker_gray" />
        </LinearLayout>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/dashboard_sync_card_sync_progress"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/darker_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
