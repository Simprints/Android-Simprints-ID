<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DashboardCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/DashboardCardStyleRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dashboard_sync_card_title"
            style="@style/DashboardCardStyleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder - Sync card title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dashboard_sync_card_progress_message"
            style="@style/SimprintsStyle.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dashboard_card_space_below_title"
            android:text="Placeholder - Connecting"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/dashboard_sync_card_progress_indeterminate_progress_bar"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_sync_card_title"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/dashboard_sync_card_progress_indeterminate_progress_bar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="3dp"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_sync_card_progress_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dashboard_sync_card_progress_message"
            app:layout_constraintTop_toTopOf="@+id/dashboard_sync_card_progress_message" />

        <ProgressBar
            android:id="@+id/dashboard_sync_card_progress_sync_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_sync_card_progress_message" />

        <TextView
            android:id="@+id/dashboard_sync_card_last_sync"
            style="@style/DashboardCardStyleLastSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_dashboard_card_sync_space_above_last_sync"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_sync_card_progress_sync_progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
