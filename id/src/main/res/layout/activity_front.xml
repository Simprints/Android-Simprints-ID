<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/launch_background_description"
        android:src="@drawable/launch_background" />

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="Simprints"
        android:textColor="@color/simprints_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/libSimprintsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/versionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="LibSimprints"
        android:textColor="@color/simprints_white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bt_sync"
        android:layout_alignTop="@+id/bt_sync"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/bt_sync"
        android:layout_toStartOf="@+id/bt_sync"
        app:srcCompat="@drawable/ic_menu_sync_ready"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/bt_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/versionTextView"
        android:layout_alignStart="@+id/versionTextView"
        android:layout_below="@+id/libSimprintsTextView"
        android:layout_marginTop="15dp"
        android:text="@string/sync_data" />

</RelativeLayout>
