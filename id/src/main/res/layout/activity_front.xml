<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue">

    <TextView
        android:id="@+id/libSimprintsVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/simprintsIdVersionTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="@string/libsimprints_label"
        android:textColor="@color/simprints_white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/simprintsIdVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/simprints_label"
        android:textColor="@color/simprints_white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_home_screen_logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/launch_background_description"
        android:src="@drawable/launch_background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
