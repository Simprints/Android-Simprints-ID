<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loginImageViewLogo"
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:contentDescription="@string/simprints_logo"
            android:src="@drawable/simprints_logo" />


        <TextView
            android:id="@+id/libSimprintsVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:text="@string/libsimprints_label"
            android:textColor="@color/simprints_white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/simprintsIdVersionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/simprints_label"
            android:textColor="@color/simprints_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/requestLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/requestLogin_message"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
