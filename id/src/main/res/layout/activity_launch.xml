<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:orientation="vertical"
    tools:context=".activities.launch.LaunchActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/launch_background_description"
        android:src="@drawable/launch_background" />

    <TextView
        android:id="@+id/consentTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        android:text="@string/short_consent"
        android:textColor="@color/simprints_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/confirmConsentTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/confirm_consent"
        android:textColor="@color/simprints_white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/loadingInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/loading"
        android:textColor="@color/simprints_white"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/launchProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:progressDrawable="@drawable/launch_progress_bar" />

</LinearLayout>
