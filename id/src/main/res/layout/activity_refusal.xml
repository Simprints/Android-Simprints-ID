<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_refusal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simprints.id.activities.RefusalActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/why_did_you_skip_fingerprinting"
        android:textAlignment="center"
        android:textColor="@color/simprints_white"
        android:textSize="25sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <RadioButton
            android:id="@+id/rb_scannerNotHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/scanner_not_here"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_scannerNotWorking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/scanner_not_working"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_unableToCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/unable_to_capture_a_good_scan"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_unableToGive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/beneficiary_was_physically_unable"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_refused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/beneficiary_refused"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/other"
            android:textColor="@color/simprints_white"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/et_other_refusal_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/simprints_white"
        android:enabled="false"
        android:gravity="top|start"
        android:hint="@string/hint_other_reason"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_back_to_simprints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_scan_prints" />

        <Button
            android:id="@+id/bt_submit_refusal_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/button_submit" />

    </LinearLayout>


</LinearLayout>
