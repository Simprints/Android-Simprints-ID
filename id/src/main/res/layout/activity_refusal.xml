<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refusalScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simprints.id.activities.refusal.RefusalActivity"
    android:fitsSystemWindows="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/why_did_you_skip_fingerprinting"
                android:textAlignment="center"
                android:textColor="@color/simprints_white"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/refusalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <RadioButton
                    android:id="@+id/rbScannerNotHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scanner_not_here"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbScannerNotWorking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/scanner_not_working"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbUnableToCapture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unable_to_capture_a_good_scan"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbUnableToGive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/beneficiary_was_physically_unable"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rbRefused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/beneficiary_refused"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    android:textColor="@color/simprints_white"
                    android:textSize="20sp" />

            </RadioGroup>

                <EditText
                    android:id="@+id/refusalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="@color/simprints_white"
                    android:enabled="false"
                    android:gravity="top|start"
                    android:hint="@string/hint_other_reason"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/refusalButtonsLayout">

                <Button
                    android:id="@+id/btBackToSimprints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/button_scan_prints"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btSubmitRefusalForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:text="@string/button_submit"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>




</ScrollView >
