<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_request_key"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/requestProjectKeyImageViewLogo"
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:contentDescription="@string/simprints_logo"
            android:src="@drawable/simprints_logo" />

        <TextView
            android:id="@+id/requestProjectKeyTextViewProjectKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/requestProjectKey_enter_key"
            android:textColor="@color/simprints_white" />

        <EditText
            android:id="@+id/requestProjectKeyEditTextProjectKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/requestProjectKey_key_hint"
            android:inputType="textPersonName"
            android:textColor="@color/simprints_grey" />

        <Button
            android:id="@+id/requestProjectKeyButtonScanQr"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="60dp"
            android:drawableEnd="@drawable/ic_barcode"
            android:drawableRight="@drawable/ic_barcode"
            android:onClick="onScanBarcodeClicked"
            android:text="@string/scan_qr" />

        <Button
            android:id="@+id/requestProjectKeyButtonEnterKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter" />

    </LinearLayout>
</RelativeLayout>
