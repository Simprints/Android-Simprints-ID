<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_request_key"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/simprints_blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/requestProjectCredentialsImageViewLogo"
            android:layout_width="55dp"
            android:layout_height="75dp"
            android:contentDescription="@string/simprints_logo"
            android:src="@drawable/simprints_logo" />

        <TextView
            android:id="@+id/requestProjectCredentialsTextViewSecret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="17sp"
            android:text="@string/requestProjectCredentials_enter_project_secret_id"
            android:textColor="@color/simprints_white" />

        <Button
            android:id="@+id/requestProjectCredentialsButtonScanQr"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_barcode"
            android:drawableRight="@drawable/ic_barcode"
            android:text="@string/scan_qr" />

        <Button
            android:id="@+id/requestProjectCredentialsButtonManualTyping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:text="@string/requestProjectCredentials_type_project_details" />


        <LinearLayout
            android:id="@+id/requestProjectCredentialsLayoutProjectDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:animateLayoutChanges= "true"
            android:visibility="gone">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/requestProjectCredentialsEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/requestProjectCredentials_id_hint"
                    android:textSize="15sp"
                    android:inputType="textVisiblePassword"
                    android:textColor="@color/simprints_white"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/requestProjectCredentialsEditTextSecret"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/requestProjectCredentials_secret_hint"
                    android:maxLines="3"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:textColor="@color/simprints_white"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/requestProjectCredentialsButtonEnterSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/enter" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
