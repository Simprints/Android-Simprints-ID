<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="GENERAL"
        android:key="preferences_general"
        >
        <ListPreference
            android:defaultValue="en"
            android:entries="@array/language_array"
            android:entryValues="@array/language_values"
            android:key="select_language"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Language" />
        <MultiSelectListPreference
            android:title="Select Fingers"
            android:entries="@array/finger_array"
            android:key="select_fingers"
            android:summary="Pick the fingers you would like to scan"
            android:entryValues="@array/finger_values"
            android:defaultValue="@array/default_fingers"/>
        <SwitchPreference
            android:title="Sync upon launch"
            android:summary="Attempt sync each time app is launched"
            android:defaultValue="false"
            android:key="sync_upon_launch"/>
        <SwitchPreference
            android:title="Background Sync"
            android:summary="Automatically sync on a set schedule"
            android:defaultValue="true"
            android:key="background_sync"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="ABOUT">
        <Preference
            android:title="App Version"
            android:summary="2018.3.1"
            />
        <Preference
            android:title="Scanner Version"
            android:summary="Some scanner version" />
    </PreferenceCategory>

</PreferenceScreen>
